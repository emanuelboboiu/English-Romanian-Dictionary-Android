<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>    <style name="AppTheme" parent="AppBaseTheme">        <item name="android:textColor">@color/blackText</item>    </style>    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">        <item name="android:textColorPrimary">@color/blackText</item>        <item name="actionMenuTextColor">@color/blackText</item>    </style>    <!-- In res/values/styles.xml -->    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">        <!-- Set the text color for the title and menu items -->        <item name="android:textColorPrimary">@color/blackText</item>        <!-- You may also need to set a tint for icons if they are not changing -->        <item name="actionMenuTextColor">@color/blackText</item>    </style>    <style name="style_main_buttons" parent="Widget.AppCompat.Button">        <item name="android:textSize">@dimen/buttons_size</item>        <item name="android:textStyle">bold</item>        <item name="android:gravity">center_horizontal|center_vertical</item>    </style>    <style name="llActionBarForTVButtonsStyle" parent="Widget.AppCompat.Button">        <item name="android:gravity">center_vertical</item>        <item name="android:singleLine">true</item>        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>        <item name="android:textColor">@color/ll_action_bar_text</item>    </style>    <style name="MyAlertDialog" parent="@android:style/Theme.Dialog">        <item name="android:textSize">20sp</item>        <item name="android:paddingLeft">5dp</item>        <item name="android:paddingRight">5dp</item>    </style>    <style name="style_for_image_views_top">        <item name="android:clickable">true</item>        <item name="android:focusable">true</item>        <item name="android:screenReaderFocusable" tools:ignore="NewApi">true</item>        <item name="android:background">@color/transparent</item>        <item name="android:adjustViewBounds">true</item>        <item name="android:scaleType">fitXY</item>        <item name="android:padding">1dp</item>    </style>    <style name="style_for_edit_text_top">        <item name="android:gravity">left</item>        <item name="android:background">@color/search_edit_background</item>        <item name="android:textColor">@color/blackText</item>        <item name="android:layout_marginTop">1dp</item>        <item name="android:layout_marginBottom">1dp</item>        <item name="android:padding">2dp</item>    </style>    <style name="bottomTVWhiteOnBlack" parent="Widget.AppCompat.TextView">        <item name="android:background">#121212</item> <!-- dark gray, not pure black -->        <item name="android:textColor">#E0E0E0</item> <!-- light gray, not pure white -->        <item name="android:textStyle">bold</item>    </style></resources>