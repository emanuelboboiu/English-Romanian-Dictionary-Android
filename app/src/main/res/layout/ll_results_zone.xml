<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/svResults"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="false"
    android:orientation="vertical"
    android:paddingLeft="@dimen/results_left_margin"
    android:paddingRight="@dimen/results_right_margin"
    android:paddingTop="@dimen/results_top_margin"
    tools:showIn="@layout/activity_main" >

    <LinearLayout
        android:id="@+id/llResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tvNumberOfResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="center_vertical|center_horizontal"
            android:nextFocusDown="@id/tvStatus"
            android:nextFocusUp="@id/etWord" />
    </LinearLayout>

</ScrollView>